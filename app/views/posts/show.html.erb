<p id="notice"><%= notice %></p>
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= @post.title %></h5>
    <p class = "update-stamp"><%= l @post.updated_at, format: :short%></p>
    <p class="card-text"><%= @post.content.html_safe %></p>
  </div>
</div>




<div>
  <h3>コメント一覧</h3>
  <p>コメント:<%= @comments.size %>件</p>
  <table class="table table-striped">
    <% if @comments.any? %>
      <thead class = "thead-light">
        <tr>
          <td>コメント</td>
        </tr>
      </thead>
      <tbody>
        <div id = "comment_area" >
          <% @comments.each do |comment| %>
            <tr>
              <td><%= comment.coment_content %></td>
            </tr>
          <% end %>
        </div>
      </tbody>

    <% else %>
      <p>コメントはまだありません。</p>
    <% end %>
  </table>
</div>


<%= form_with model: [@post, @comment], remote: true do |f| %>
  <%= f.hidden_field :post_id, value: @post.id  %>
  <div class="form-group">
    <%= f.label :coment_content %>
    <%= f.text_area :coment_content, class: "form-control" %>
  </div>
  
  <div class="actions text-center">
    <%= f.submit "投稿", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', root_path %>