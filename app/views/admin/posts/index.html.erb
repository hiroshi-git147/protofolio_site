<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, admin_post_path(post) %></h5>
      <p class = "update-stamp"><%= l post.updated_at, format: :short%></p>
      <hr>
      <%= link_to 'Edit', edit_admin_post_path(post), class: "btn btn-outline-primary" %>
      <%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
    </div>
  </div>
<% end %>

<%= link_to new_admin_post_path, class: "btn p-0 text-dark" do %>
  <i class="fas fa-plus align-middle pr-1"></i><span class="align-middle">New Post</span>
<% end %>